  <div class="field">
    <div class="control">
    <input class="input is-info" name="userId" class="input" type="text" placeholder="아이디" required maxlength="24">
    </div>
  </div>
  <div class="field">
    <div class="control">
    <input class="input is-info" name="userPw" class="input" type="password" placeholder="비밀번호" required maxlength="64">
    </div>
  </div>
  <div class="field">
    <div class="control has-text-centered">
    <button class="button is-info is-fullwidth gothic-font">
      로그인 
    </button>
    </div>
  </div>
</form>
